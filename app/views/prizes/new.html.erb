<% new_record = @prize.new_record? %>
<div class="page-header-block ">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8 inverted text-center">
        <% if new_record %>
        <h1>Create a Prize</h1>
        <% else %>
        <h1>Update Prize</h1>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container margin-bottom-6">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= form_for @prize, url: new_record ? hackimoto_category_prizes_path : hackimoto_category_prize_path do |f| %>
        <%= f.label :rank, "Rank", :class => "h6 label" %>
        <%= f.text_field :rank %><br />

        <%= f.label :amount, "Amount", :class => "h6 label" %>
        <%= f.text_field :amount %><br />

        <%= f.label :winner, "Winning team", :class => "h6 label" %>
        <%= f.select :winner, @hackimoto.hacks.map { |hack| [hack.name, hack.id] }, include_blank: "-- no winner --", selected: @prize.winner.try(:hack).try(:id) %>

        <div class="text-center">
          <% if new_record %>
          <%= f.submit "Create", :class => "button" %>
          <% else %>
          <%= f.submit "Update", :class => "button" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>