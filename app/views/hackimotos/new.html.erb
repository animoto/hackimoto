<div class="page-header-block ">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8 inverted text-center">
        <h1>
          Create a Hackimoto
        </h1>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= form_for @hackimoto do |f| %>
        <%= f.label :name, "Name", :class => "h6 label" %>
        <%= f.text_field :name %>

        <%= f.label :description, "Description", :class => "h6 label" %>
        <%= f.text_area :description %>

        <%= f.label :rule, "Rule", :class => "h6 label" %>
        <%= f.text_area :rule %>

        <%= f.label :start_date, "Start date", :class => "h6 label" %>
        <%= f.date_field :start_date, :class => "input" %>

        <div class="text-center">
          <%= f.submit "Create", :class => "button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>